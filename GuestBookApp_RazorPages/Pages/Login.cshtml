@page
@model GuestBookApp_RazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="LoginVM.Username"></label>
            <input asp-for="LoginVM.Username" class="form-control" />
            <span asp-validation-for="LoginVM.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginVM.Password"></label>
            <input asp-for="LoginVM.Password" class="form-control" type="password" />
            <span asp-validation-for="LoginVM.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-page="/Register" class="btn btn-secondary">Register</a>
        <a asp-page="/Index" class="btn btn-secondary">Login as Guest</a>
    </form>
</div>
